@using TechJobs.Models;
@using TechJobs.ViewModels;
@using System.Reflection;
@model TechJobs.Models.Job;

@{ 
// TODO #2.2 - display the job fields, one per row (outside of this @{ } block)
}
<table class="job-listing">
    @foreach (PropertyInfo field in Model.GetType().GetProperties())    {
        @if (field.Name.ToString() != "ID")
        {
            <tr>
                <th>@field.Name</th>
                <td>@field.GetValue(Model).ToString()</td>
            </tr>
        }
    }
</table>